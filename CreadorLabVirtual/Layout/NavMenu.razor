@using Blazored.LocalStorage
@inject NavigationManager NavigationManager
@inject ILocalStorageService localStorage

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Creador Lab Virtual - FNI</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <div class="nav-back-button">
        <a class="@ClaseBoton"
           href="/EditorTexto"
           aria-disabled="@(!botonesHabilitados)">
            <span class="bi bi-arrow-left-nav-menu" aria-hidden="true"></span>
        </a>
    </div>
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" 
                    href="" Match="NavLinkMatch.All"
                     @onclick="@(() => botonesHabilitados ? Guardar() : Task.CompletedTask)">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Guía de uso
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="javascript:void(0)" @onclick="NuevoEditorTexto" Match="NavLinkMatch.All">
                <span class="bi bi-file-earmark-plus-fill-nav-menu" aria-hidden="true"></span> Nuevo
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="javascript:void(0)" @onclick="AbrirArchivo" Match="NavLinkMatch.All">
                <span class="bi bi-folder2-open-nav-menu" aria-hidden="true"></span> Abrir
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <a class="@ClaseBoton"
                     href="#"
                     @onclick="@(() => botonesHabilitados ? Guardar() : Task.CompletedTask)">
                <span class="bi bi-floppy-nav-menu" aria-hidden="true"></span> Guardar
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="@ClaseBoton"
                    href="#"
                    @onclick="@(() => botonesHabilitados ? GuardarComo() : Task.CompletedTask)">
                <span class="bi bi-floppy-fill-nav-menu" aria-hidden="true"></span> Guardar como
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="@ClaseBoton"
                    href="#"
               @onclick="@(() => botonesHabilitados ? ExportarDoc() : Task.CompletedTask)">
                <span class="bi bi-download-nav-menu" aria-hidden="true"></span> Exportar
            </a>
        </div>        
    </nav>
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="javascript:void(0)" @onclick="Salir" Match="NavLinkMatch.All">
            <span class="bi bi-door-open-fill-nav-menu" aria-hidden="true"></span> Salir
        </NavLink>
    </div>
</div>
@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;    

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
@code{
    private bool botonesHabilitados;

    protected override async Task OnInitializedAsync()
    {
        var estadoBotones = await localStorage.GetItemAsync<bool>("BotonesHabilitados");
        botonesHabilitados = estadoBotones;
    }

    private string ClaseBoton => botonesHabilitados ? "nav-link" : "nav-link disabled-nav";
    private async Task NuevoEditorTexto()
    {
        botonesHabilitados = true;
        await localStorage.SetItemAsync("BotonesHabilitados", true);
        NavigationManager.NavigateTo("EditorTexto");
    }
}
